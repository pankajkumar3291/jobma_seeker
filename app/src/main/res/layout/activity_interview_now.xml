<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrlView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">


        <RelativeLayout
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorlogin"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backarr"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/tvAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Apply"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/liMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvInterviwerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/colorLB"
                    android:textSize="@dimen/_11sdp" />


                <TextView
                    android:id="@+id/tvInterviwerJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_toRightOf="@+id/tvInterviwerName"
                    android:text=""
                    android:textColor="@color/colorLB"
                    android:textSize="@dimen/_11sdp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your interview will consist:"
                    android:textColor="@color/colorLB"
                    android:textSize="@dimen/_11sdp" />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/liChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liMain"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorReetuBorder" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/liSubChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liChild"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/colorApplyScreen"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">


            <ImageView
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_13sdp"
                android:scaleType="fitXY"
                android:src="@drawable/graphic" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/grey_dot" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="You can review your response after you finish recording."
                    android:textColor="@color/colorLG"
                    android:textSize="@dimen/_9sdp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/grey_dot" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Click Publish and continue when you are satisfied."
                    android:textColor="@color/colorLG"
                    android:textSize="@dimen/_9sdp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_12sdp">


                <ImageView
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/grey_dot" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Contact our support team if you run into any issues."
                    android:textColor="@color/colorLG"
                    android:textSize="@dimen/_9sdp" />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/viewSec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liSubChild"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorReetuBorder" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relativeForInterviewInclude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewSec"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/colorApplyScreen"
            android:padding="@dimen/_10sdp">


            <RelativeLayout
                android:id="@+id/relativeInter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_7sdp">


                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tvInterviewInclude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your interview includes"
                        android:textColor="@color/colorLB"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTimesTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="Minutes"
                        android:textColor="@color/colorLB"
                        android:textSize="@dimen/_10sdp" />


                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_2ssp"
                        android:layout_toLeftOf="@+id/tvTimesTotal"
                        android:src="@drawable/time_new" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/tvTotalQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Total Question"
                    android:textColor="@color/colorLB"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvRemainingQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTotalQuestion"
                    android:text="Remaining Question"
                    android:textColor="@color/colorLB"
                    android:textSize="@dimen/_10sdp" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linearOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeInter"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/relativeOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/imgOne"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:src="@drawable/video_new" />

                    <TextView
                        android:id="@+id/tvPreRecordedQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/imgOne"
                        android:text="Pre-recorded questions"
                        android:textColor="@color/colorLB"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/reF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@color/colorLightYellow"
                    android:padding="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:src="@drawable/record_video"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvPreRecordedTimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/img"
                        android:gravity="center"
                        android:text="0 minutes"
                        android:textColor="@color/colorDarkGold"
                        android:textSize="@dimen/_10sdp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp">


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorReetuBorder"
                        android:visibility="visible" />


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearOne"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/relativeTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/imgTwo"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:src="@drawable/mcq_new" />

                    <TextView
                        android:id="@+id/tvMultipleChoiceQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/imgTwo"
                        android:text="Multiple choice questions"
                        android:textColor="@color/colorLB"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@color/colorLightYellow"
                    android:padding="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/imgT"
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:src="@drawable/mcq_new"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvMultipleChoiceQuesTimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/imgT"
                        android:gravity="center"
                        android:text="0 minutes"
                        android:textColor="@color/colorDarkGold"
                        android:textSize="@dimen/_10sdp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorReetuBorder" />


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearTwo"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/relativeThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/imgThree"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:src="@drawable/essay_new" />

                    <TextView
                        android:id="@+id/tvSubjectiveQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/imgThree"
                        android:text="Subjective questions"
                        android:textColor="@color/colorLB"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@color/colorLightYellow"
                    android:padding="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/imgTT"
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:src="@drawable/essay_new"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvSubjectiveQuesTimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/imgTT"
                        android:gravity="center"
                        android:text="0 minutes"
                        android:textColor="@color/colorDarkGold"
                        android:textSize="@dimen/_10sdp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorReetuBorder" />


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearThree"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">


                <!--android:button="@drawable/custom_checkbox"-->
                <CheckBox
                    android:id="@+id/checkBoxMand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:gravity="start"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:text="As part of this interview process, your personally identifiable information (your name, email address, and phone number) will be shared with the organization you are applying to. in addition to that , your video interview recording will also be shared with the same organization."
                    android:textColor="@color/colorLB"
                    app:buttonTint="@color/colorLG" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearFive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeForInterviewInclude"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/applybtn_continue_bg"
                android:text="CONTINUE"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>


