<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/mainRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorForgotYourPassword"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/_15sdp"
            android:text="@string/filter"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_13sdp"
            android:textStyle="normal" />


        <ImageView
            android:id="@+id/imageCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_11sdp"
            android:src="@drawable/icon_cancel" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainRelative"
        android:padding="@dimen/_10sdp">


        <CheckBox
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/checkBoxApplied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:button="@drawable/custom_checkbox"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Applied"
            android:textColor="@color/colorLG"
            android:textSize="@dimen/_11sdp" />

        <View
            android:id="@+id/viewApplied"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/checkBoxApplied"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:background="@color/colorReetuBorder" />


        <CheckBox

            android:id="@+id/checkBoxOnHold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewApplied"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:button="@drawable/custom_checkbox"
            android:paddingLeft="@dimen/_10sdp"
            android:text="On Hold"
            android:textColor="@color/colorLG"
            android:textSize="@dimen/_11sdp" />


        <View
            android:id="@+id/viewOnHold"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/checkBoxOnHold"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:background="@color/colorReetuBorder" />


        <CheckBox
            android:id="@+id/checkBoxSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewOnHold"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:button="@drawable/custom_checkbox"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Selected"
            android:textColor="@color/colorLG"
            android:textSize="@dimen/_11sdp" />


        <View
            android:id="@+id/viewOnSelected"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/checkBoxSelected"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:background="@color/colorReetuBorder" />


        <CheckBox
            android:id="@+id/checkBoxRejected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewOnSelected"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:button="@drawable/custom_checkbox"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Rejected"
            android:textColor="@color/colorLG"
            android:textSize="@dimen/_11sdp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/checkBoxRejected"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:background="@color/colorReetuBorder" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxRejected"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/apply_bg"
                android:text="APPLY"
                android:textColor="@color/colorWhite" />


            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_weight="1"
                android:background="@drawable/cancel_bg"
                android:text="CANCEL"
                android:textColor="@color/colorWhite" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>