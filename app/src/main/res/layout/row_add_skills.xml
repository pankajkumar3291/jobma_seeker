<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginRight="@dimen/_8sdp"
        android:id="@+id/linSalaryDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/add_skill_background"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvSkills"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_weight="1.90"
                android:maxHeight="@dimen/_30sdp"
                android:textColor="#999"
                android:textSize="@dimen/_11sdp"
                tools:text="Associates" />


            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/tvSkills"
                android:layout_weight=".10"
                android:src="@drawable/delete_profile" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>