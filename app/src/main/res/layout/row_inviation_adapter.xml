<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout2"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/relativeLayout2"
            app:layout_constraintTop_toTopOf="parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/reOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp">

                    <TextView
                        android:id="@+id/tvJobTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Designation : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvJobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toLeftOf="@+id/imageAction"
                        android:text="Not available"
                        android:textColor="@color/colorLB"
                        android:textSize="@dimen/_10sdp" />


                    <ImageView
                        android:id="@+id/imageAction"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_5sdp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/reTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reOne"
                    android:layout_marginTop="@dimen/_3sdp">


                    <TextView
                        android:id="@+id/tvCompanyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Company name : "
                        android:textColor="@color/colorLB"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tvCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvCompanyText"
                        android:text="Not available"
                        android:textColor="@color/colorLG"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/reThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reTwo"
                    android:layout_marginTop="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/textInterviewMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Interview Mode : "
                        android:textColor="@color/colorLB"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/tvInterviewMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textInterviewMode"
                        android:text="Not available"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/reFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reThree"
                    android:layout_marginTop="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/textDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Date : "
                        android:textColor="@color/colorLB"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textDate"
                        android:text="Not available"
                        android:textSize="@dimen/_10sdp" />


                    <ImageView
                        android:id="@+id/imageThreeDots"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/three_dot_jobma"
                        android:visibility="visible" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/reFive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reFour"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textTimeZone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Time Zone : "
                        android:textColor="@color/colorLB"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/tvTimeZone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textTimeZone"
                        android:text="Not available"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/reSix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reFive"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Time : "
                        android:textColor="@color/colorLB"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textTime"
                        android:text="Not available"
                        android:textSize="@dimen/_10sdp" />


                </RelativeLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/viewOne"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@color/colorlogin" />


        <ImageView

            android:id="@+id/imageOne"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/invi_circle" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>