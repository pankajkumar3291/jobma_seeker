<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/li"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:orientation="vertical">


            <View
                android:id="@+id/v"
                android:layout_width="1dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:background="@color/colorReetuBorder" />


            <View
                android:id="@+id/roundView"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_below="@+id/v"
                android:background="@drawable/pending" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roundView"
                android:layout_gravity="center"
                android:background="@color/colorReetuBorder" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rowClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/li"
            android:padding="@dimen/_5sdp">


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Title"
                android:textColor="@color/colorLB"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Ticket :"
                        android:textColor="@color/colorLG"
                        android:textSize="@dimen/_11sdp" />


                    <TextView
                        android:id="@+id/tvTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/tv"
                        android:textColor="@color/colorLG"
                        android:textSize="@dimen/_11sdp"
                        tools:text="45454554545" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reported On :"
                        android:textColor="@color/colorLG"
                        android:textSize="@dimen/_11sdp" />


                    <TextView
                        android:id="@+id/tvReportedOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/tvR"
                        android:textColor="@color/colorLG"
                        android:textSize="@dimen/_11sdp"
                        tools:text="23/06/2019" />


                    <ImageView
                        android:id="@+id/imageForward"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_right_errow" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status :"
                        android:textColor="@color/colorLG"
                        android:textSize="@dimen/_11sdp" />


                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/colorLG"
                        android:textSize="@dimen/_11sdp"
                        tools:text="Pending" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/re"
        android:layout_marginLeft="@dimen/_8sdp"
        android:background="@color/colorReetuBorder" />


</RelativeLayout>